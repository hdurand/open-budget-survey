<div class="row">
  <div class="span3">
    <div id="sidebar">
      <ul class="country-sidebar">
        {{#each countries}}
        <li><a href="#profile/table/{{name}}">{{name}}</a><span class="bar">{{count_a}},{{count_b}},{{count_c}},{{count_d}}</span></li>
        {{/each}}
      </ul>
    </div>
  </div>
  <div class="span9">
    <div id="main">
      <h2>{{{country}}}</h2>
      {{#if answers}}
        <table class="table table-striped table-small">
          <thead>
            <th>#</th>
            <th>Question</th>
            <th colspan="3">Score</th>
          </thead>
          <tbody>
          {{#each answers}}
            <tr>
              <td class="q-id">{{id}}</td>
              <td class="q-text">{{question}}</td>
              <td class="q-answer letter letter-{{letter}}">{{letter_processed}}</td>
              <td class="q-answer number">{{number}}%</td>
              {{#if render_pie_chart}}
                <td class="q-answer chart pie">{{number}}/100</td>
              {{else}}
                <td class="q-answer chart">&nbsp;</td>
              {{/if}}
            </tr>
          {{/each}}
          </tbody>
        </table>
      {{/if}}
    </div>
  </div>
</div>
