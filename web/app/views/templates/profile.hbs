<div class="row">
  <div class="span3">
    <div id="sidebar">
      <h4>Select...</h4>
      <ul>
        {{#each countries}}
          <li><a href="#profile/table/{{this}}">{{this}}</a></li>
        {{/each}}
      </ul>
    </div>
  </div>
  <div class="span9">
    <div id="main">
      <h2>{{{country}}}</h2>
      {{#if answers}}
        <table class="table table-striped table-small">
          <thead>
            <th>#</th>
            <th>Question</th>
            <th colspan="2">Score</th>
          </thead>
          <tbody>
          {{#each answers}}
            <tr>
              <td class="q-id">{{id}}</td>
              <td class="q-text">{{question}}</td>
              <td class="q-answer letter letter-{{letter}}">{{letter_processed}}</td>
              <td class="q-answer number">{{number}}</td>
            </tr>
          {{/each}}
          </tbody>
        </table>
      {{/if}}
    </div>
  </div>
</div>
