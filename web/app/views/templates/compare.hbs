<h1>Compare</h1>
<div class="row">
  <div class="span4">
    <h4>Countries</h4>
    <ul class="compare-without">
      {{#each view_without}}
        <li><a href="{{link}}" class="close ibp-close">x</a>{{name}}</li>
      {{/each}}
      <li class="li-add"><select id="compare-add-country">
        <option>Add a country...</option>
        {{#each view_with}}
          <option value="{{name}}">{{name}}</option>
        {{/each}}
      </select></li>
    </ul>
  </div>
</div>
<h2>Dataset:</h2>
<table class="country-raw-data">
  <thead>
    <th>#</th>
    <th>Question</th>
    {{#each countries}}
      <th>{{this}}</th>
    {{/each}}
  </thead>
  <tbody>
  {{#each data}}
    <tr>
      <td class="q-id">{{id}}</td>
      <td class="q-text">{{question}}</td>
      {{#each answers}}
        <td class="q-answer">{{this}}</td>
      {{/each}}
    </tr>
  {{/each}}
  </tbody>
</table>

