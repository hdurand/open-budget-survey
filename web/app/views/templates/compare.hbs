<div class="row">
  <div class="span4">
    <div id="sidebar">
      <h2>Category</h2>
      <select id="compare-choose-group">
        {{#each groupings}}
        <optgroup label="{{by}}">
          {{#each entries}}
            <option value="{{id}}" {{selected id}}>{{title}}</option>
          {{/each}}
        </optgroup>
        {{/each}}
      </select>
      <br/><br/>
      <h2>Countries</h2>
      <ul class="compare-without">
        {{#each view_without}}
          <li><a href="{{link}}" class="close ibp-close">x</a>{{name}}</li>
        {{/each}}
        <li class="li-add"><select id="compare-add-country">
          <option>Add a country...</option>
          {{#each view_with}}
            <option value="{{this}}">{{this}}</option>
          {{/each}}
        </select></li>
      </ul>
    </div>
  </div>
  <div id="main" class="span8">
    <h1>Comparison</h1>
    <table class="table table-striped table-small country-table country-comparison">
      <thead>
        <th>#</th>
        <th>Question</th>
        {{#each countries}}
          <th class="q-answer">{{this}}</th>
        {{/each}}
      </thead>
      <tbody>
      {{#each data}}
      {{#if included}}
        <tr>
          <td class="q-id">{{id}}</td>
          <td class="q-text">{{question}}</td>
          {{#each answers}}
            <td class="q-answer letter letter-{{letter}}">{{letter_processed}}</td>
          {{/each}}
        </tr>
      {{/if}}
      {{/each}}
      </tbody>
    </table>
    {{#if countries}}
      <div class="form-actions" style="padding-left: 80%;">
        <div class="btn-group">
          <a class="btn btn-success dropdown-toggle" data-toggle="dropdown" href="#">
            Download
            <span class="caret"></span>
          </a>
          <ul class="dropdown-menu">
            <li><a href="#" onclick="return false;">Download as CSV</a></li>
            <li><a href="#" onclick="return false;">Download as XLS</a></li>
            <li><a href="#" onclick="return false;">Download as PDF</a></li>
            <!-- dropdown menu links -->
          </ul>
        </div>
      </div>
    {{/if}}
  </div>
</div>

