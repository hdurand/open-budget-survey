@import 'nib'

// Apply a natural box layout model to all elements.
// http://paulirish.com/2012/box-sizing-border-box-ftw/
*
  box-sizing: border-box

#home-view
  width: 480px
  margin: 0 auto

header
  height: 150px

nav
  background: #f0f0f0
  padding: 20px

nav a
  display: block

nav a,
nav a:visited
  color: #08c




